<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
		<property name="url"
			value="jdbc:mysql://ec2-54-191-141-206.us-west-2.compute.amazonaws.com:3306/iwpqrs?zeroDateTimeBehavior=convertToNull"></property>
		<property name="username" value="root"></property>
		<property name="password" value="root"></property>
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource"></property>
		<property name="mappingResources">
			<list>
				<value>co/com/inversionesxyz/dao/mapping/InformacionAnalista.hbm.xml
				</value>
				<value>co/com/inversionesxyz/dao/mapping/Encuesta.hbm.xml</value>
				<value>co/com/inversionesxyz/dao/mapping/Producto.hbm.xml</value>
				<value>co/com/inversionesxyz/dao/mapping/Solicitud.hbm.xml</value>
				<value>co/com/inversionesxyz/dao/mapping/Sucursal.hbm.xml</value>
			</list>
		</property>

		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="javax.persistence.validation.mode">none</prop>
			</props>
		</property>
	</bean>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="dataSource" ref="dataSource"></property>
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>

	<!-- Beans DAO -->

	<bean id="InformacionAnalistaDAO" class="co.com.inversionesxyz.dao.IAnalistaDAO">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="EncuestaDAO" class="co.com.inversionesxyz.dao.IEncuestaDAO">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="ProductoDAO" class="co.com.inversionesxyz.dao.IProductoDAO">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="SolicitudDAO" class="co.com.inversionesxyz.dao.ISolicitudDAO">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="SucursalDAO" class="co.com.inversionesxyz.dao.ISucursalDAO">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>

	<!-- Beans Business Logic -->
	
	<bean id="SolicitudID" class="co.com.inversionesxyz.bl.impl.SolicitudBL">
		<property name="SolicitudDAO" ref="SolicitudDAO"></property>
	</bean>
</beans>